<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:longClickable="false"
    tools:layout_height="@dimen/_40sdp"
    tools:layout_width="@dimen/_120sdp"
    android:id="@+id/row_cont">

    <ImageView
        android:id="@+id/fullscreen"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_fullscreen" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:longClickable="false"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/table_header_row_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/fullscreen"
        android:layout_toLeftOf="@+id/fullscreen"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="7"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_10ssp"
        android:longClickable="false"
        android:text="text" />

    <TextView
        android:id="@+id/table_header_row_description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table_header_row_text_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/fullscreen"
        android:layout_toLeftOf="@+id/fullscreen"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="7"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textSize="@dimen/_10ssp"
        android:textStyle="italic"
        android:longClickable="false"
        android:text="text" />
</RelativeLayout>