<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/input_cont"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_round"
    android:fitsSystemWindows="true"
    android:keepScreenOn="true">

    <pro.quizer.quizer3.view.element.textview.SmallResizableTextView
        android:id="@+id/phone_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_34sdp"
        android:gravity="center"
        android:text="@string/enter_phone"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_20ssp"
        android:visibility="gone"/>

    <pro.quizer.quizer3.view.element.edittext.ResizableEditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_info"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_34sdp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="16"
        android:maxLines="1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/view_ok"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="end"
        android:background="@drawable/button_background_green"
        android:padding="@dimen/_4sdp"
        android:src="@drawable/next"
        android:tint="@color/white" />

</RelativeLayout>