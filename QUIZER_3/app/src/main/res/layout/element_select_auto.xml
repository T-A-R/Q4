<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cont_select_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp">

        <TextView
            android:id="@+id/select_answer_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/answer_select_text"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/selected_answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_answer_title"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@+id/answer_select_text"
            android:text=""
            android:textColor="@color/dark_shadow"
            android:textSize="@dimen/_16ssp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/answer_select_text"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="@string/answer_selector"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp"
            android:visibility="visible" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>