<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:keepScreenOn="true"
    android:gravity="center">


    <RelativeLayout
        android:id="@+id/cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/bg_full"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/brand_color_avia">

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:id="@+id/cont_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_rossya" />

            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cont_image"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="center"
                android:text="@string/screensaver"
                android:textColor="@android:color/white"
                android:textSize="32sp" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/img_anim_wait_white" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/img_anim_wait_white" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/img_anim_wait_white" />

            <ImageView
                android:id="@+id/img4"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/img_anim_wait_white" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>