<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cont"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">


    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@android:color/transparent">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="35dp"
                        app:srcCompat="@drawable/bg_circle_gray" />

                    <ImageView
                        android:id="@+id/ico"
                        android:layout_width="24dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="63dp"
                        android:layout_marginTop="65dp"
                        app:srcCompat="@drawable/ico_profile" />

                    <TextView
                        android:id="@+id/txt_name"
                        fontPath="futura_pt_book.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="136dp"
                        android:layout_marginTop="43dp"
                        android:singleLine="true"
                        android:text="@string/side_menu_unknown_name"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="22sp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/txt_id"
                        fontPath="futura_pt_book.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="136dp"
                        android:layout_marginTop="65dp"
                        android:text="@string/side_menu_id"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18sp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/txt_edit"
                        fontPath="futura_pt_medium.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="136dp"
                        android:layout_marginTop="87dp"
                        android:text="@string/side_menu_edit"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="16sp"
                        tools:ignore="MissingPrefix" />

                    <ImageView
                        android:id="@+id/img_marker"
                        android:layout_width="9dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="150dp"
                        android:tint="@android:color/darker_gray"
                        app:srcCompat="@drawable/ico_marker" />

                    <TextView
                        android:id="@+id/txt_city"
                        fontPath="futura_pt_book.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="62dp"
                        android:layout_marginTop="142dp"
                        android:text="Екатеринбург"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="22sp"
                        tools:ignore="MissingPrefix" />

                    <ImageView
                        android:id="@+id/img_drop"
                        android:layout_width="7.1dp"
                        android:layout_height="3.7dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="160dp"
                        android:layout_marginRight="22dp"
                        android:tint="@color/green"
                        app:srcCompat="@drawable/ico_dropdown" />

                    <RelativeLayout
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="195dp"
                        android:layout_marginRight="25dp"
                        android:background="@color/midGrayBg">

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line"
                        android:layout_marginLeft="25dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linear_delegate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="25dp"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/txt_raffles"
                                fontPath="futura_pt_book.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/side_menu_raffles"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="22sp"
                                android:visibility="gone"
                                tools:ignore="MissingPrefix" />

                            <TextView
                                android:id="@+id/txt_date"
                                fontPath="futura_pt_book.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:text="@string/side_menu_date"
                                android:textColor="@android:color/black"
                                android:textSize="22sp"
                                android:visibility="gone"
                                tools:ignore="MissingPrefix" />

                            <TextView
                                android:id="@+id/txt_tariffs"
                                fontPath="futura_pt_book.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:text="@string/side_menu_tariffs"
                                android:textColor="@android:color/black"
                                android:textSize="22sp"
                                android:visibility="gone"
                                tools:ignore="MissingPrefix" />

                            <TextView
                                android:id="@+id/txt_contacts_delegate"
                                fontPath="futura_pt_book.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:text="@string/side_menu_contacts"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="22sp"
                                tools:ignore="MissingPrefix" />

                            <TextView
                                android:id="@+id/txt_promo"
                                fontPath="futura_pt_book.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:text="@string/side_menu_promo"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="22sp"
                                tools:ignore="MissingPrefix" />

                            <TextView
                                android:id="@+id/txt_calculator"
                                fontPath="futura_pt_book.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:text="@string/side_menu_benefit"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="22sp"
                                tools:ignore="MissingPrefix" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_player"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="25dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_contacts"
                                fontPath="futura_pt_book.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:text="@string/side_menu_contacts"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="22sp"
                                tools:ignore="MissingPrefix" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/line3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginRight="25dp"
                            android:background="@color/midGrayBg">

                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/line_notify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="17dp"
                                android:layout_marginTop="5dp"
                                android:tint="#A3A3A3"
                                app:srcCompat="@drawable/ico_settings" />

                            <TextView
                                android:id="@+id/txt_notify"
                                fontPath="futura_pt_book.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="14dp"
                                android:layout_weight="1"
                                android:text="@string/side_menu_notify_off"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="22sp"
                                tools:ignore="MissingPrefix" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="25dp"
                            android:background="@color/midGrayBg">

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/line_delegate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="17dp"
                                android:layout_marginTop="5dp"
                                android:tint="#A3A3A3"
                                app:srcCompat="@drawable/ico_profile" />

                            <TextView
                                android:id="@+id/txt_delegate"
                                fontPath="futura_pt_book.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="14dp"
                                android:text="@string/side_menu_delegate"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="22sp"
                                tools:ignore="MissingPrefix" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line_exit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="100dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="16dp"
                                android:layout_marginTop="5dp"
                                app:srcCompat="@drawable/ico_exit" />

                            <TextView
                                android:id="@+id/txt_exit"
                                fontPath="futura_pt_book.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="14dp"
                                android:text="@string/side_menu_exit"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="22sp"
                                tools:ignore="MissingPrefix" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</RelativeLayout>