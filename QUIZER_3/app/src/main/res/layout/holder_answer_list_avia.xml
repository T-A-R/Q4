<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/answer_cont"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="8dp"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/answer_images_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8ssp"
        android:layout_marginRight="@dimen/_8ssp"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.zolad.zoominimageview.ZoomInImageView
            android:id="@+id/answer_image_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_80sdp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:visibility="gone" />

        <com.zolad.zoominimageview.ZoomInImageView
            android:id="@+id/answer_image_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_80sdp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:visibility="gone" />

        <com.zolad.zoominimageview.ZoomInImageView
            android:id="@+id/answer_image_3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_80sdp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:visibility="gone" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/open_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/radio_button"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:src="@drawable/radio_button_unchecked_red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/radio_button"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_gravity="center_vertical"
                android:text="1"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer"
                    android:textColor="@android:color/black"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/answer_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="Answer"
                    android:textColor="@color/dark_shadow"
                    android:textSize="20sp"
                    android:textStyle="italic"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/open_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_4sdp"
        android:visibility="visible">

        <TextView
            android:id="@+id/edit_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:maxLines="1"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/edit_button"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@drawable/button_background_avia_transparent" />

    </RelativeLayout>

</LinearLayout>
