<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_menu_cont"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/quizer_logo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:src="@drawable/quizer" />

                <RelativeLayout
                    android:id="@+id/home_cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="16dp">

                    <ImageButton
                        android:id="@+id/home_btn"
                        style="@style/ButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:maxLines="1"
                        android:text="@string/drawer_home"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/home_icon"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:background="@drawable/home_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36sdp"
                            android:gravity="center"
                            android:text="@string/drawer_home"
                            android:textColor="@android:color/background_light"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sync_cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp">

                    <ImageButton
                        android:id="@+id/sync_btn"
                        style="@style/ButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:maxLines="1"
                        android:text="@string/drawer_sync"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:background="@drawable/sync_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36sdp"
                            android:gravity="center"
                            android:text="@string/drawer_sync"
                            android:textColor="@android:color/background_light"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/settings_cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp">

                    <ImageButton
                        android:id="@+id/settings_btn"
                        style="@style/ButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:maxLines="1"
                        android:text="@string/drawer_settings"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:background="@drawable/settings_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36sdp"
                            android:gravity="center"
                            android:text="@string/drawer_settings"
                            android:textColor="@android:color/background_light"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/quotas_cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp">

                    <ImageButton
                        android:id="@+id/quotas_btn"
                        style="@style/ButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:maxLines="1"
                        android:text="@string/drawer_quotas"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:background="@drawable/checkbox_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36sdp"
                            android:gravity="center"
                            android:text="@string/drawer_quotas"
                            android:textColor="@android:color/background_light"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/about_cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp">

                    <ImageButton
                        android:id="@+id/about_btn"
                        style="@style/ButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:maxLines="1"
                        android:text="@string/drawer_about"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:background="@drawable/about_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36sdp"
                            android:gravity="center"
                            android:text="@string/drawer_about"
                            android:textColor="@android:color/background_light"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/change_user_cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp">

                    <ImageButton
                        android:id="@+id/change_user_btn"
                        style="@style/ButtonRed"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:maxLines="1"
                        android:text="@string/drawer_exit"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:background="@drawable/logout_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36sdp"
                            android:gravity="center"
                            android:text="@string/drawer_exit"
                            android:textColor="@android:color/background_light"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</RelativeLayout>