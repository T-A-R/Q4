<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/brand_color"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/cont_toolbar">

    <FrameLayout
        android:id="@+id/second_background_toolbar_view"
        android:layout_width="match_parent"
        android:layout_height="85dp" />

    <FrameLayout
        android:id="@+id/toolbar_view_container"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/toolbar_left_frame"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:id="@+id/icon"
                    android:src="@drawable/quizer_icon_white"
                    android:tint="@android:color/white"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:visibility="gone"/>

            </FrameLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/toolbar_view_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp"
                android:layout_toStartOf="@+id/toolbar_right_frame"
                android:layout_toLeftOf="@+id/toolbar_right_frame"
                android:layout_toEndOf="@+id/toolbar_left_frame"
                android:layout_toRightOf="@+id/toolbar_left_frame"
                android:gravity="center"
                android:textColor="@android:color/white"
                tools:text="Квоты" />

            <ImageView
                android:id="@+id/toolbar_view_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@+id/toolbar_right_frame"
                android:layout_toLeftOf="@+id/toolbar_right_frame"
                android:layout_toEndOf="@+id/toolbar_left_frame"
                android:layout_toRightOf="@+id/toolbar_left_frame"
                android:gravity="center"
                android:padding="8dp"
                android:src="@drawable/ic_quizer"
                android:tint="@android:color/white"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/toolbar_right_frame"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:minWidth="?attr/actionBarSize"
                android:orientation="horizontal"
                android:padding="8dp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/toolbar_view_info"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/info_white"
                    android:tint="@android:color/white"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/toolbar_view_options"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_options"
                    android:tint="@android:color/white"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/toolbar_view_close"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_close"
                    android:tint="@android:color/white"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </RelativeLayout>

        </RelativeLayout>

    </FrameLayout>

</FrameLayout>