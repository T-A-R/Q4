<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BlueTheme">
        <item name="colorAccent">#6974f4</item>
    </style>

    <style name="SeekBarColor"
        parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="DialogAnimation_2">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@drawable/button_background_green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ButtonStyleWithoutBorder" parent="ButtonStyle">
        <item name="android:background">@drawable/button_background_red_without_border</item>
    </style>

    <style name="ButtonGreen" parent="ButtonStyle">
        <item name="android:background">@drawable/button_background_green</item>
    </style>

    <style name="ButtonRed" parent="ButtonStyle">
        <item name="android:background">@drawable/button_background_red</item>
    </style>

    <style name="ButtonGray" parent="ButtonStyle">
        <item name="android:background">@drawable/button_background_gray</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/brand_color</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/brand_color</item>
    </style>

    <style name="DialogSlideAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="ButtonAvia">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@drawable/button_background_avia</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
