<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bvp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
    android:orientation="vertical">

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <pro.quizer.quizerexit.view.resizeble.textview.LargeResizableTextView
            android:id="@+id/info_text"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            tools:text="Благодарим вас за участией"
            android:layout_marginBottom="30dp"
            android:visibility="visible" />

        <ImageView
            android:src="@drawable/ic_rossya"
            android:layout_width="400dp"
            android:tint="@color/brand_color"
            android:layout_height="96dp" />

        <pro.quizer.quizerexit.view.SquareImageView
            android:id="@+id/info_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <pro.quizer.quizerexit.view.SquareImageView
            android:id="@+id/info_icon"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <com.halilibo.bettervideoplayer.BetterVideoPlayer
            android:id="@+id/info_audio_player"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:visibility="gone"
            bvp:bvp_captionColor="@android:color/holo_blue_light"
            bvp:bvp_captionSize="16sp"
            bvp:bvp_loadingStyle="RotatingPlane"
            bvp:bvp_showBottomProgressBar="true"
            bvp:bvp_showTotalDuration="false"
            bvp:bvp_title="Аудио файл" />

        <com.halilibo.bettervideoplayer.BetterVideoPlayer
            android:id="@+id/info_video_player"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:visibility="gone"
            bvp:bvp_captionColor="@android:color/holo_blue_light"
            bvp:bvp_captionSize="16sp"
            bvp:bvp_hideControlsOnPlay="true"
            bvp:bvp_loadingStyle="RotatingPlane"
            bvp:bvp_showBottomProgressBar="true"
            bvp:bvp_showTotalDuration="false"
            bvp:bvp_title="Видео файл" />

    </LinearLayout>

    <include layout="@layout/view_question_buttons_panel_finish" />

</RelativeLayout>

