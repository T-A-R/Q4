<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <pro.quizer.quizerexit.view.resizeble.button.ResizableButton
        android:id="@+id/home_btn"
        style="@style/ButtonGray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/VIEW_HOME_TITLE" />

    <pro.quizer.quizerexit.view.resizeble.button.ResizableButton
        android:id="@+id/sync_btn"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/VIEW_SYNC_TITLE" />

    <pro.quizer.quizerexit.view.resizeble.button.ResizableButton
        android:id="@+id/settings_btn"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/VIEW_SETTINGS" />

    <pro.quizer.quizerexit.view.resizeble.button.ResizableButton
        android:id="@+id/quotas_btn"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/VIEW_QUOTAS_TITLE" />

    <pro.quizer.quizerexit.view.resizeble.button.ResizableButton
        android:id="@+id/about_btn"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/VIEW_ABOUT_TITLE" />

    <pro.quizer.quizerexit.view.resizeble.button.ResizableButton
        android:id="@+id/change_user_btn"
        style="@style/ButtonRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/VIEW_EXIT" />


</LinearLayout>