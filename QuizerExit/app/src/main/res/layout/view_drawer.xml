<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="center_horizontal">



        <ImageButton
            android:id="@+id/home_btn"
            style="@style/ButtonGray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:maxLines="1"
            android:text="@string/VIEW_HOME_TITLE"
            android:textSize="@dimen/_12ssp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:gravity="center"
                android:text="@string/VIEW_HOME_TITLE_CAPS"
                android:textColor="@android:color/background_light"
                android:textSize="@dimen/_12ssp" />

            <ImageView

                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"

                android:layout_alignParentLeft="false"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/home_white" />



        </RelativeLayout>



    </RelativeLayout>

    <Button
        android:id="@+id/sync_btn"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:maxLines="1"
        android:text="@string/VIEW_SYNC_TITLE"
        android:textSize="@dimen/_12ssp" />

    <Button
        android:id="@+id/settings_btn"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:maxLines="1"
        android:text="@string/VIEW_SETTINGS"
        android:textSize="@dimen/_12ssp" />

    <Button
        android:id="@+id/quotas_btn"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:maxLines="1"
        android:text="@string/VIEW_QUOTAS_TITLE"
        android:textSize="@dimen/_12ssp" />

    <Button
        android:id="@+id/about_btn"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:maxLines="1"
        android:text="@string/VIEW_ABOUT_TITLE"
        android:textSize="@dimen/_12ssp" />

    <Button
        android:id="@+id/change_user_btn"
        style="@style/ButtonRed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:maxLines="1"
        android:text="@string/VIEW_EXIT"
        android:textSize="@dimen/_12ssp" />

</LinearLayout>