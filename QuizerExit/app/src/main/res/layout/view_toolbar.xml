<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/brand_color"
    android:clickable="true"
    android:focusable="true">

    <FrameLayout
        android:id="@+id/second_background_toolbar_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/toolbar_view_container"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/toolbar_left_frame"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:minWidth="?attr/actionBarSize"
                android:padding="12dp">

            </FrameLayout>

            <ImageView
                android:id="@+id/toolbar_view_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@+id/toolbar_right_frame"
                android:layout_toLeftOf="@+id/toolbar_right_frame"
                android:layout_toEndOf="@+id/toolbar_left_frame"
                android:layout_toRightOf="@+id/toolbar_left_frame"
                android:gravity="center"
                android:padding="8dp"
                android:src="@drawable/ic_quizer_white" />

            <LinearLayout
                android:id="@+id/toolbar_right_frame"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:minWidth="?attr/actionBarSize"
                android:orientation="horizontal"
                android:padding="12dp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/toolbar_view_options"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_options"
                    android:tint="@android:color/white"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/toolbar_view_close"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_close"
                    android:tint="@android:color/white"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

</FrameLayout>