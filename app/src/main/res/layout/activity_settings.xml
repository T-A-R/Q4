<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorAccent">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="onBackClick"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back_black_24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:text="Настройки"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

    </FrameLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin">
<TextView
    android:id="@+id/size_questions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/text_text_size_in_questions"
    android:textSize="16sp"
    android:textColor="@color/secondaryTextMaterialLight"
    android:layout_weight=".4"/>
        <TextView
            android:id="@+id/size_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A"
            android:layout_weight=".6"/>
    </LinearLayout>

        <Spinner
            android:id="@+id/switch_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginTop="10dp"
            android:layout_below="@id/size_questions"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
           />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin">
        <TextView
            android:id="@+id/interval_between_answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_interval_between_answers"
            android:textSize="16sp"
            android:layout_weight=".4"
            />
        <TextView
            android:id="@+id/interval_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18"
            android:textSize="16sp"
            android:layout_weight=".6"/>
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:min="20"
        android:max="100" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <View
            android:background="@color/colorAccent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <TextView
            android:text="Номер отправки:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spinner_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:background="@color/colorAccent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <Button
            android:id="@+id/setting_delete_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onExit"
            android:text="Удалить пользователя"
            android:background="@drawable/button_selector"
            android:theme="@style/ThemeOverlay.MyBreakButton"
            />

        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onExit"
            android:text="Сохранить"
            android:theme="@style/ThemeOverlay.MyDarkButton"/>

        <View
            android:background="@color/colorAccent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </LinearLayout>

</LinearLayout>
